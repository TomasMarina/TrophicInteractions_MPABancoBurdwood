  author = {Riccialdelli, Luciana and Becker, Yamila A. and Fioramonti, Nicol{\'a}s E. and Torres, M{\'o}nica and Bruno, Daniel O. and Rey, Andrea Raya and Fern{\'a}ndez, Daniel A.},
  year = {2020},
