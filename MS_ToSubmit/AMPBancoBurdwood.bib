@article{Riccialdelli2020,
  title = {Trophic Structure of Southern Marine Ecosystems: A Comparative Isotopic Analysis from the {{Beagle Channel}} to the Oceanic {{Burdwood Bank}} Area under a Wasp-Waist Assumption},
