@article{Schejter2021,
  title = {Benthic Communities at the Marine Protected Area {{Namuncur\'a}}/{{Burdwood}} Bank, {{SW Atlantic Ocean}}: Detection of Vulnerable Marine Ecosystems and Contributions to the Assessment of the Rezoning Process},
